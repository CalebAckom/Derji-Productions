    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "prisma studio",
    "db:test": "tsx src/scripts/test-db.ts",
    "db:setup": "tsx src/scripts/migrate.ts && npm run db:seed"
  },
